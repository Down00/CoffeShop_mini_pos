<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context=".Dashboard">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="928dp"
        android:background="@drawable/bg_view" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/bbclogo10" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="387dp"
        android:layout_height="425dp"
        android:layout_below="@+id/top_view"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="-577dp"
        android:layout_marginRight="24dp"
        android:columnCount="3"
        android:rowCount="3">

        <!-- First CardView -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:layout_marginTop="50dp"
                android:padding="16dp"
                app:cardCornerRadius="20dp"
                android:elevation="100dp"
                >

                <!-- ImageView and TextView inside CardView -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/salesx" />

                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="34dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="MENU"
                        android:layout_marginBottom="-7dp"
                        android:fontFamily="@font/groteskmed"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <!-- Your CardView content goes here -->
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Second CardView -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/inv"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="20dp"
                android:elevation="100dp">

                <!-- ImageView and TextView inside CardView -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">>

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/salesp" />

                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="34dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="MENU MANAGER"
                        android:layout_marginBottom="-8dp"
                        android:fontFamily="@font/groteskmed"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <!-- Your CardView content goes here -->
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Third CardView -->
        <LinearLayout
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/queue"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="20dp"
                android:elevation="100dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">>

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ticket" />

                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="34dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="QUEUE"
                        android:layout_marginBottom="-8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/groteskmed"
                        android:textStyle="bold" />
                </RelativeLayout>

                <!-- Your CardView content goes here -->
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Fourth CardView -->
        <LinearLayout
            android:layout_width="6dp"
            android:layout_height="4dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/btndailysales"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:layout_marginTop="4dp"
                android:elevation="100dp"
                app:cardCornerRadius="20dp"
                >

                <!-- ImageView and TextView inside CardView -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="95dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/salest" />

                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="34dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="-8dp"
                        android:gravity="center"
                        android:text="SALES"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/groteskmed"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </GridLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/btns4"
        android:text="Logout"
        android:fontFamily="@font/groteskmed"
        android:textSize="17sp"
        android:textStyle="bold" />
</RelativeLayout>
