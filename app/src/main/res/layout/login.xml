<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginJ"
    android:background="#000000">

    <androidx.cardview.widget.CardView
        android:id="@+id/contact"
        android:layout_width="321dp"
        android:layout_height="437dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="40dp"
        android:elevation="20dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="20dp"
        app:cardElevation="40dp">

        <!-- Button Layout -->
        <LinearLayout
            android:layout_width="314dp"
            android:layout_height="423dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/odwlogo"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:layout_marginBottom="15dp"
                android:padding="0dp"
                android:src="@drawable/bbclogo4" />
            <!-- Username EditText inside CardView -->
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/btns3"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="20dp"
                android:fontFamily="@font/groteskmed"
                android:hint="Username"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <!-- Password EditText inside CardView -->
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btns3"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="20dp"
                android:fontFamily="@font/groteskmed"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <Button
                android:id="@+id/loginbtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btns3"
                android:fontFamily="@font/groteskmed"
                android:text="LOGIN"
                android:textColor="@color/black"
                app:cornerRadius="9dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
